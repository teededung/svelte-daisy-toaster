{
  "name": "svelte-daisy-toaster",
  "version": "0.5.5",
  "description": "Svelte DaisyUI Toast Component",
  "keywords": [
    "daisyui",
    "tailwind",
    "tailwind-4",
    "tailwindcss",
    "svelte",
    "svelte-5",
    "toast"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && vite build",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package",
    "prepublishOnly": "yarn package",
    "publish": "yarn npm publish",
    "publish:patch": "yarn version patch && yarn build && yarn npm publish",
    "publish:minor": "yarn version minor && yarn build && yarn npm publish",
    "publish:major": "yarn version major && yarn build && yarn npm publish"
  },
  "devDependencies": {
    "@sveltejs/adapter-vercel": "^5.10.2",
    "@sveltejs/kit": "^2.37.0",
    "@sveltejs/package": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "@tailwindcss/vite": "^4.1.12",
    "daisyui": "^5.1.3",
    "svelte": "^5.38.6",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.4"
  },
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "daisyui": "^5.0.46",
    "svelte": "^5.36.2",
    "tailwindcss": "^4.1.11"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "packageManager": "yarn@4.9.2"
}
