{
	"name": "svelte-daisy-toaster",
	"version": "0.7.2",
	"description": "Svelte DaisyUI Toast Component",
	"keywords": [
		"daisyui",
		"tailwind",
		"tailwind-4",
		"tailwindcss",
		"svelte",
		"svelte-5",
		"toast"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"package": "svelte-kit sync && svelte-package",
		"prepublishOnly": "pnpm package",
		"publish": "pnpm npm publish",
		"publish:patch": "pnpm version patch && pnpm build && pnpm npm publish",
		"publish:minor": "pnpm version minor && pnpm build && pnpm npm publish",
		"publish:major": "pnpm version major && pnpm build && pnpm npm publish"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-vercel": "^5.10.3",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"daisyui": "^5.5.14",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"highlight.js": "^11.11.1",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.5",
		"svelte-highlight": "^7.9.0",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"type": "module",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"daisyui": "^5.1.0",
		"svelte": "^5.36.0",
		"tailwindcss": "^4.1.0"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c"
}
